{
    "name": "@elizaos-plugins/plugin-email",
    "version": "0.25.6-alpha.1",
    "type": "module",
    "main": "./dist/index.js",
    "module": "dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts",
        "test": "jest",
        "clean": "rm -rf dist",
        "lint": "biome lint .",
        "lint:fix": "biome check --apply .",
        "format": "biome format .",
        "format:fix": "biome format --write ."
    },
    "dependencies": {
        "@elizaos-plugins/plugin-shared-email-sanity": "workspace:^",
        "@elizaos/core": "workspace:^",
        "html-to-text": "^9.0.3",
        "imapflow": "^1.0.187",
        "lodash": "^4.17.21",
        "mail-notifier": "^0.5.0",
        "mailparser": "^3.7.4",
        "nodemailer": "^6.9.16",
        "quoted-printable": "^1.0.1"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/jest": "^29.5.14",
        "@types/mail-notifier": "0.5.2",
        "@types/node": "^22.10.5",
        "@types/nodemailer": "^6.4.17",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "ts-jest-mock-import-meta": "^1.2.1",
        "tsup": "^8.5.0",
        "typescript": "^5.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "agentConfig": {
        "pluginType": "elizaos:client:1.0.0",
        "pluginParameters": {
            "EMAIL_OUTGOING_SERVICE": {
                "type": "string",
                "minLength": 1,
                "description": "\"smtp\" | \"gmail\"",
                "optional": false
            },
            "EMAIL_OUTGOING_HOST": {
                "type": "string",
                "minLength": 1,
                "description": "SMTP Hostname or IP to connect to. Required only when \"smtp\" service is configured.",
                "optional": true
            },
            "EMAIL_OUTGOING_PORT": {
                "type": "string",
                "minLength": 1,
                "description": "the port to connect to (defaults to 465 for secure connections, otherwise 587). Required only if \"smtp\" is configured.",
                "optional": true
            },
            "EMAIL_SECURE": {
                "type": "string",
                "minLength": 1,
                "description": "if true the connection will use TLS, otherwise TLS will be used if server supports STARTTLS extension. Set to true if port 465 is selected.",
                "optional": false
            },
            "EMAIL_OUTGOING_USER": {
                "type": "string",
                "minLength": 1,
                "description": "Username",
                "optional": false
            },
            "EMAIL_OUTGOING_PASS": {
                "type": "string",
                "minLength": 1,
                "description": "Password. If \"gmail\" selected you will need to provision a dedicated password for the agent",
                "optional": false
            },
            "EMAIL_INCOMING_SERVICE": {
                "type": "string",
                "minLength": 1,
                "description": "\"imap\"",
                "optional": false
            },
            "EMAIL_INCOMING_HOST": {
                "type": "string",
                "minLength": 1,
                "description": "IMAP Hostname or IP to connect to",
                "optional": false
            },
            "EMAIL_INCOMING_PORT": {
                "type": "string",
                "minLength": 1,
                "description": "the port to connect to (defaults to 993)",
                "optional": false
            },
            "EMAIL_INCOMING_USER": {
                "type": "string",
                "minLength": 1,
                "description": "Username",
                "optional": false
            },
            "EMAIL_INCOMING_PASS": {
                "type": "string",
                "minLength": 1,
                "description": "Password",
                "optional": false
            }
        }
    }
}